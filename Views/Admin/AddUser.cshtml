@using Sport_Accessories.ViewModels;
@model AddUserViewModel;
@{
    ViewData["Title"] = "Add a user";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Your custom JavaScript file inclusion -->
    <script src="~/js/EditUser.js"></script>
    <link rel="stylesheet" href="~/css//EditUser.css" />


</head>

<body>

    <div class="container">
        <h2 class="text-center mb-4">Add a user</h2>
        <a class="btn-link" style="font-size:20px;display:flex;align-items:center;justify-content:center" asp-action="HomeAdmin">Return to home admin panel</a>

        <form method="post" enctype="multipart/form-data" asp-action="SubmitAddUser">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="userName">Username</label>
                <input asp-for="UserName" class="form-control" id="userName" placeholder="Enter username">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" asp-for="Email" class="form-control" id="email" placeholder="Enter email address">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" asp-for="PasswordHash" class="form-control" id="password" placeholder="Enter password">
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="lockoutEnd">Lockout End - optional</label>
                <input type="datetime-local" class="form-control" id="lockoutEnd" asp-for="LockoutEnd">
                <span asp-validation-for="LockoutEnd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="accessFailedCount">Access Failed Count - optional</label>
                <input type="number" class="form-control" id="accessFailedCount" placeholder="Enter access failed count" asp-for="AccessFailedCount">
                <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
            </div>

            <div class="form-group custom-control custom-checkbox">
                <input id="emailConfirmed" onclick="CheckEmailValue()" type="checkbox" class="custom-control-input" asp-for="EmailConfirmed">
                <label class="custom-control-label" for="emailConfirmed">Is Email Confirmed?</label>
                <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
            </div>

            <div class="form-group custom-control custom-checkbox">
                <input id="twoFactorEnabled" onclick="Check2FAValue()" type="checkbox" class="custom-control-input" asp-for="TwoFactorEnabled">
                <label class="custom-control-label" for="twoFactorEnabled">Is 2FA Enabled?</label>
                <span asp-validation-for="TwoFactorEnabled" class="text-danger"></span>
            </div>

            <div class="form-group custom-control custom-checkbox">
                <input id="lockoutEnabled" onclick="CheckLockoutValue()" type="checkbox" class="custom-control-input" asp-for="LockoutEnabled">
                <label class="custom-control-label" for="lockoutEnabled">Is Lockout Enabled?</label>
                <span asp-validation-for="LockoutEnabled" class="text-danger"></span>
            </div>

            <div class="form-group">
                <h5>Change Profile Picture - optional</h5>
                <input type="hidden" id="originalImageUrl" value="/images/defaultImage.jpg" />

                <div>
                    <label for="imageUpload" id="imagePreview">

                        <img class="img-fluid" name="image" src="~/images/defaultImage.jpg" style="height:90px;width:100px;border-radius:120px;" />

                    </label>
                    <div style="display:flex;flex-direction:row;margin:10px;">
                        <button id="reset" type="button" style="font-size:20px;background-color:cornflowerblue;border-radius:10px;">Reset</button>
                    </div>
                </div>
            </div>
            <input asp-for="@Model.FormFile" id="imageUpload" type="file" accept="image/*" style="display:none;" />

            <button type="submit" class="btn btn-primary">Save Changes</button>

        </form>

    </div>
</body>

</html>