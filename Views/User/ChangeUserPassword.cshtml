@using Sport_Accessories.ViewModels
@model ChangeUserPasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Change Password</h2>
        <form method="post">
            <div class="form-group">
                <label for="oldPassword">Old Password</label>
                <input asp-for="@Model.OldPassword" type="password" class="form-control" id="oldPassword" name="OldPassword">

                <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input asp-for="@Model.NewPassword" type="password" class="form-control" id="newPassword" name="NewPassword">
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <input asp-for="@Model.ConfirmNewPassword" type="password" class="form-control" id="confirmPassword" name="ConfirmNewPassword">

                <span asp-validation-for="@Model.ConfirmNewPassword" class="text-danger"></span>
            </div>
            <h5><div asp-validation-summary="ModelOnly" class="text-danger"></div></h5>
            <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
    </div>
</body>
</html>
