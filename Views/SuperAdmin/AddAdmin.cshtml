@using Sport_Accessories.ViewModels;
@model AddAdminViewModel;
@{
    ViewData["Title"] = "Add an admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Your custom JavaScript file inclusion -->
    <script src="~/js/EditUser.js"></script>
    <link rel="stylesheet" href="~/css//EditUser.css" />


</head>

<body>

    <div class="container">
        <h2 class="text-center mb-4">Add an admin</h2>
        <a class="btn-link" style="font-size:20px;display:flex;align-items:center;justify-content:center" asp-action="HomeSuperAdmin">Return to home super admin panel</a>

        <form id="addAdminForm" method="post" asp-action="SubmitAddAdmin">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="userName">Username</label>
                <input asp-for="UserName" class="form-control" id="userName" placeholder="Enter username">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" asp-for="PasswordHash" class="form-control" id="password" placeholder="Enter password">
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <div class="form-group custom-control custom-checkbox">
                <input id="lockoutEnabled" onclick="CheckLockoutValue()" type="checkbox" class="custom-control-input" asp-for="LockoutEnabled">
                <label class="custom-control-label" for="lockoutEnabled">Is Lockout Enabled?</label>
                <span asp-validation-for="LockoutEnabled" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="lockoutEnd">Lockout End - optional</label>
                <input type="datetime-local" class="form-control" id="lockoutEnd" asp-for="LockoutEnd">
                <span asp-validation-for="LockoutEnd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="accessFailedCount">Access Failed Count - optional</label>
                <input type="number" class="form-control" id="accessFailedCount" placeholder="Enter access failed count" asp-for="AccessFailedCount">
                <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!-- Button to trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#manageRolesModal">
                    Manage Roles
                </button>

                <!-- Modal dialog for managing roles -->
                <div class="modal fade" id="manageRolesModal" tabindex="-1" role="dialog" aria-labelledby="manageRolesModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="manageRolesModalLabel">Manage Roles</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" asp-for="CreateRole" id="createRoleCheckbox">
                                            <label class="custom-control-label" for="createRoleCheckbox">Create Role</label>
                                        </div>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" asp-for="DeleteRole" id="deleteRoleCheckbox">
                                            <label class="custom-control-label" for="deleteRoleCheckbox">Delete Role</label>
                                        </div>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" asp-for="ReadRole" id="readRoleCheckbox">
                                            <label class="custom-control-label" for="readRoleCheckbox">Read Role</label>
                                        </div>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" asp-for="EditRole" id="updateRoleCheckbox">
                                            <label class="custom-control-label" for="updateRoleCheckbox">Update Role</label>
                                        </div>
                                    </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="saveRolesButton" style="cursor: pointer;">Save Changes</button>
                        </div>

                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add</button>

        </form>

    </div>
</body>

</html>
